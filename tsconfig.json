{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@lib": ["./src/lib"],
      "@lib/*": ["./src/lib/*"],
      "@common": ["./src/common"],
      "@common/*": ["./src/common/*"],
      "@config": ["./src/config"],
      "@config/*": ["./src/config/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  }
}
